<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="40dp"
            android:layout_centerHorizontal="true"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/sign_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        app:cardElevation="10dp"
        android:layout_below="@+id/register"
        >

        <EditText
            android:drawableLeft="@drawable/account"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edit_20"
            android:background="@color/white"
            android:hint=" Name"
            android:inputType="textEmailAddress"
            android:padding="13dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/sign_email_card"
        android:layout_below="@+id/sign_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        app:cardElevation="10dp"
        >

        <EditText
            android:drawableLeft="@drawable/email"
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edit_20"
            android:hint=" Email ID"
            android:inputType="textEmailAddress"
            android:padding="13dp"
            android:background="@color/white"
            />

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sign_contact_card"
            android:layout_below="@+id/sign_email_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="30dp"
            app:cardElevation="10dp">

            <EditText
                android:drawableLeft="@drawable/phone"
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edit_20"
                android:background="@color/white"
                android:hint=" Contact"
                android:inputType="phone"
                android:padding="13dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sign_password"
            android:layout_below="@+id/sign_contact_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="30dp"
            app:cardElevation="10dp"
            >

            <EditText
                android:drawableLeft="@drawable/password"
                android:id="@+id/password1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edit_20"
                android:hint=" PASSWORD"
                android:inputType="textPassword"
                android:padding="13dp"
                android:background="@color/white"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sign_confirm_password"
            android:layout_below="@+id/sign_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="30dp"
            app:cardElevation="10dp"
            >

            <EditText
                android:drawableLeft="@drawable/password"
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edit_20"
                android:hint=" CONFIRM PASSWORD"
                android:inputType="textPassword"
                android:padding="13dp"
                android:background="@color/white"
                />

        </androidx.cardview.widget.CardView>

        <RadioGroup
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/sign_gender_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_confirm_password">

            <RadioButton
                android:id="@+id/gender_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="20dp"
                android:layout_weight="1"
                />
            <RadioButton
                android:id="@+id/gender_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="20dp"
                android:layout_weight="1"/>

        </RadioGroup>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_gender_card"
            android:id="@+id/sign_city"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/sign_dob_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_city"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/Sign_dob"
                style="@style/edit_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@drawable/dob"
                android:drawablePadding="5dp"
                android:editable="false"
                android:hint="Date of birth"
                android:padding="10dp"/>



        </androidx.cardview.widget.CardView>

        <Button
            android:text="SIGN UP"
            android:id="@+id/sign_button"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_dob_card"
            style="@style/button_18"
            />
        <Button
            android:id="@+id/login_button"
            android:text="LOGIN"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_button"
            style="@style/button_18"
            />
    </RelativeLayout>

</ScrollView>