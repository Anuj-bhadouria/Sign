<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/sign_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="50dp"
        app:cardElevation="10dp"
        >

        <EditText
            android:drawableLeft="@drawable/account"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edit_20"
            android:background="@color/white"
            android:hint=" Name"
            android:inputType="textEmailAddress"
            android:padding="13dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/sign_email"
        android:layout_below="@+id/sign_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        app:cardElevation="10dp"
        >

        <EditText
            android:drawableLeft="@drawable/email"
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edit_20"
            android:hint=" Email ID"
            android:inputType="textEmailAddress"
            android:padding="13dp"
            android:background="@color/white"
            />

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sign_contact"
            android:layout_below="@+id/sign_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="30dp"
            app:cardElevation="10dp"
            >

            <EditText
                android:drawableLeft="@drawable/phone"
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edit_20"
                android:background="@color/white"
                android:hint=" Contact"
                android:inputType="phone"
                android:padding="13dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sign_password"
            android:layout_below="@+id/sign_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="30dp"
            app:cardElevation="10dp"
            >

            <EditText
                android:drawableLeft="@drawable/password"
                android:id="@+id/password1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edit_20"
                android:hint=" PASSWORD"
                android:inputType="textPassword"
                android:padding="13dp"
                android:background="@color/white"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sign_confirm_password"
            android:layout_below="@+id/sign_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="30dp"
            app:cardElevation="10dp"
            >

            <EditText
                android:drawableLeft="@drawable/password"
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edit_20"
                android:hint=" CONFIRM PASSWORD"
                android:inputType="textPassword"
                android:padding="13dp"
                android:background="@color/white"
                />

        </androidx.cardview.widget.CardView>

        <Button
            android:text="SIGN UP"
            android:id="@+id/sign_button"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_confirm_password"
            style="@style/button_18"
            />
        <Button
            android:id="@+id/login_button"
            android:text="LOGIN"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_button"
            style="@style/button_18"
            />
    </RelativeLayout>

</ScrollView>